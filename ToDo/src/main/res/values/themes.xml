<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/Widget.ToDo.FloatingActionButton</item>
        <item name="toolbarStyle">@style/Widget.ToDo.Toolbar</item>
    </style>

    <style name="Theme.ToDo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.ToDo.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.ToDo.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.ToDo.FloatingActionButton" parent="">
        <item name="colorSecondary">?attr/colorSecondaryVariant</item>
        <item name="colorOnSecondary">?attr/android:colorBackground</item>
        <item name="colorOnSurface">?attr/android:colorBackground</item>
    </style>

    <style name="Widget.ToDo.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.ToDo.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="colorControlNormal">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.ToDo.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorPrimary">?attr/android:colorBackground</item>
    </style>

</resources>